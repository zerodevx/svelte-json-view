{
  "name": "@zerodevx/svelte-json-view",
  "version": "1.0.3",
  "description": "View JSON data prettily",
  "author": "Jason Lee <jason@zerodevx.com>",
  "scripts": {
    "dev": "vite dev",
    "prebuild": "npm run lint && npm run check",
    "build": "svelte-package -o package && vite build -c vite.dist.config.js && npm run build:copy && cd package && npx publint",
    "build:copy": "cp {package.json,LICENSE,README.md} package && cp package/dist/index.umd.js package/dist/index.umd.cjs",
    "postbuild": "echo 'To publish to npm, run:\n$ cd package && npm publish --access public'",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "format": "prettier --plugin-search-dir . --write .",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "test": "playwright test"
  },
  "peerDependencies": {
    "svelte": "3.55.1"
  },
  "devDependencies": {
    "@playwright/test": "1.31.1",
    "@sveltejs/adapter-auto": "2.0.0",
    "@sveltejs/kit": "1.8.8",
    "@sveltejs/package": "2.0.2",
    "@sveltejs/vite-plugin-svelte": "2.0.3",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-svelte3": "4.0.0",
    "prettier": "2.8.4",
    "prettier-plugin-svelte": "2.9.0",
    "svelte-check": "3.0.4",
    "terser": "5.16.5",
    "tslib": "2.5.0",
    "typescript": "4.9.5",
    "vite": "4.1.4"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "svelte": "./index.js"
    },
    "./dist": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "svelte": "./index.js",
  "jsdelivr": "./dist/index.umd.js",
  "files": [
    "**/*"
  ],
  "license": "ISC",
  "repository": "github:zerodevx/svelte-json-view",
  "keywords": [
    "svelte",
    "vanillajs",
    "json-pretty-print",
    "json-tree"
  ]
}
